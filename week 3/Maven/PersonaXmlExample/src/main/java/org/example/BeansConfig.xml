<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    ">

    <bean id="person" class="Beans.Person">
        <!--This xml is an example of how we can modify the information of the construct or depending on
        the type or the index -->
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="Andres"/>
        <constructor-arg index="2" value="af.gomez"/>
    </bean>

    <context:annotation-config />
</beans>
